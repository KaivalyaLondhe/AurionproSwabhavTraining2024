package com.aurionpro.model;

import java.util.Scanner;

public class TicTacToeGame {
	
	static Scanner scanner = new Scanner(System.in);
	
	private void displayScreen() {
		System.out.println("<-------------------->");
		System.out.println("Welcome to Tic Tac Toe");
		System.out.println("<-------------------->");
		System.out.println("Enter how big of a grid you want to play in.");
		System.out.print("Enter the number of rows: ");
		int rowsInput = scanner.nextInt();
		System.out.println("Now enter the number of columnbs: ");
		int columnsInput = scanner.nextInt();
		if (rowsInput != columnsInput)
			System.err.println("In order to play the game fair the number of rows and columns must be same.");
		arrayCreation(rowsInput, columnsInput);
	}
	
	private static void arrayCreation(int rowsInput, int columnsInput) {
		String[][] grid = new String[rowsInput][columnsInput];
	}
	
	private void gameMenu(String[][] grid) {
		System.out.println("For player 1: X will be used");
		System.out.println("For player 2: O will be used");
		
		
	}
}
