import static org.junit.jupiter.api.Assertions.*;

public class TicTacToeFacadeTest {

    private TicTacToeFacade gameFacade;

    @BeforeEach
    public void setup() {
        gameFacade = new TicTacToeFacade();
    }

    @Test
    public void testPlayMove() {
        gameFacade.playMove(0, 0);
        // Test valid move
        char[][] board = gameFacade.getBoard();
        assertEquals('X', board[0][0]);
        
        gameFacade.playMove(0, 0);
        // Test invalid move
        assertEquals('X', board[0][0]);
    }

